<%- include('partials/header') %>
<main>
  <div class="home-main">
    <h1>Welcome to Knowledge Quest!</h1>
    <p>Track your reading, visualize your knowledge growth, and level up! Start by searching for a book and viewing your library.</p>
    <section class="recent-skills">
      <h2>Recent Skills Gained</h2>
      <% if (data && data.length !== 0) { %>
        <ul class="library-list">
          <% for (let i = 0; i < data.length; i++) { %>
            <li class="library-book">
              <img src="<%= data[i].coverurl %>" alt="Book cover for <%= data[i].title %>" class="book-cover">
              <div class="library-book-info">
                <strong><%= data[i].subject %></strong> (from <em><%= data[i].title %></em>) <br>
                <span class="text-muted">EXP:</span> <%= data[i].expgained %>/<%= data[i].exptonext %> <br>
                <span class="text-muted">Pages:</span> <%= data[i].pagesread %>/<%= data[i].pages %>
              </div>
            </li>
          <% } %>
        </ul>
      <% } else { %>
        <strong>You haven't added any books to your library!</strong>  
      <% } %>
    </section>
  </div>
</main>
<%- include('partials/footer') %>
